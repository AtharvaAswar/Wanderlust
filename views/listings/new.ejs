<% layout("layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br>
                <h3>Create new Airbnb</h3>
                <form method="post" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label">Title</label>
                        <input type="text" placeholder="Enter title" name="listing[title]" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter the name</div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[description]" class="form-label">Description</label>
                        <textarea name="listing[description]" id="sd" placeholder="Enter description"
                            class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="listing[image]" class="form-label">Image Filename</label>
                        <input type="file" placeholder="add image " name="listing[image]" class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="listing[price]" class="form-label">Price</label>
                            <input type="text" placeholder="Enter price" name="listing[price]" class="form-control"
                                required>
                            <div class="invalid-feedback">Enter correct price</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="listing[country]" class="form-label">Country</label>
                            <input type="text" placeholder="Enter country" name="listing[country]" class="form-control"
                                required>
                            <div class="invalid-feedback">Please enter country</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="listing[location]" class="form-label">Location</label>
                        <input type="text" placeholder="Enter location" name="listing[location]" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter location</div>
                    </div>

                    <div class="mb-3 listing-category">
                        <div class="listing-category-partition">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]"
                                    value="trending" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Trending
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]"
                                    value="budget" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Budget
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]"
                                    value="ACrooms" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    AC rooms
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]" value="city"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    City
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]" value="farms"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Farm
                                </label>
                            </div>
                        </div>
                        <div class="listing-category-partition">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]"
                                    value="mountain" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Mountain
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]" value="beach"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Beach
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]" value="pool"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Pool
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]" value="igloo"
                                    id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Igloo
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="listing[speciality]"
                                    value="boathouse" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Boathouse
                                </label>
                            </div>
                        </div> &nbsp; &nbsp; &nbsp;
                        <span>*select multiple options</span>
                    </div>

                    <button class="btn btn-dark add-btn mt-3 mb-2">Save</button>
                </form>
            </div>
        </div>
    </body>